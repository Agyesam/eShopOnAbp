{  
  "ReverseProxy": {
    "Routes": {
      "AbpApi": {
        "ClusterId": "Administration",
        "Match": {
          "Path": "/api/abp/{**catch-all}"
        }
      },
      "Account Service": {
        "ClusterId": "Account",
        "Match": {
          "Path": "/api/account/{**everything}"
        }
      },
      "Catalog Service": {
        "ClusterId": "Catalog",
        "Match": {
          "Path": "/api/catalog/{**everything}"
        }
      },
      "Basket Service": {
        "ClusterId": "Basket",
        "Match": {
          "Path": "/api/basket/{**everything}"
        }
      },
      "Ordering Service": {
        "ClusterId": "Ordering",
        "Match": {
          "Path": "/api/ordering/{**everything}"
        }
      },
      "Payment Service": {
        "ClusterId": "Payment",
        "Match": {
          "Path": "/api/payment/{**everything}"
        }
      },
      "Cmskit Service": {
        "ClusterId": "CmsKit",
        "Match": {
          "Path": "/api/cmskit/{**everything}"
        }
      },
      "Cmskit Public Service": {
        "ClusterId": "CmsKit",
        "Match": {
          "Path": "/api/cms-kit-public/{**everything}"
        }
      },
      "Cmskit Admin Service": {
        "ClusterId": "CmsKit",
        "Match": {
          "Path": "/api/cms-kit-admin/{**everything}"
        }
      },
      "product-picture-route": {
        "ClusterId": "ProductPictures",
        "Match": {
          "Path": "/product-images/{**everything}",
          "Methods": [ "GET" ]
        }
      }
    },
    "Clusters": {
      "Account": {
        "Destinations": {
          "destination1": {
            "Address": "http://app-authserver"
          }
        }
      },
      "Administration": {
        "Destinations": {
          "destination1": {
            "Address": "http://administration-service"
          }
        }
      },
      "Catalog": {
        "Destinations": {
          "destination1": {
            "Address": "http://catalog-service"
          }
        }
      },
      "Basket": {
        "Destinations": {
          "destination1": {
            "Address": "http://basket-service"
          }
        }
      },
      "Ordering": {
        "Destinations": {
          "destination1": {
            "Address": "http://ordering-service"
          }
        }
      },
      "Payment": {
        "Destinations": {
          "destination1": {
            "Address": "http://payment-service"
          }
        }
      },
      "CmsKit": {
        "Destinations": {
          "destination1": {
            "Address": "http://cmskit-service"
          }
        }
      },
      "ProductPictures": {
        "Destinations": {
          "destination1": {
            "Address": "http://catalog-service"
          }
        }
      }
    }
  }
}
